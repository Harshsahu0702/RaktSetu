        // Close mobile menu when clicking outside
        document.addEventListener('click', function (event) {
            const menu = document.getElementById('mobile-menu');
            const button = document.getElementById('mobile-menu-button');
            if (!menu.contains(event.target) && event.target !== button && !button.contains(event.target)) {
                menu.classList.add('hidden');
            }
        });

        // Modal functionality
        let currentUserType = '';
        const modal = document.getElementById('authModal');
        const loginForm = document.getElementById('loginForm');
        const signupForm = document.getElementById('signupForm');
        const loginTab = document.getElementById('loginTab');
        const signupTab = document.getElementById('signupTab');
        const modalTitle = document.getElementById('modalTitle');

        // Show modal with login form
        function showLoginModal(userType) {
            currentUserType = userType;
            modalTitle.textContent = `Login as ${userType}`;
            loginForm.classList.remove('hidden');
            signupForm.classList.add('hidden');
            loginTab.classList.add('text-blue-600', 'border-blue-500');
            loginTab.classList.remove('text-gray-500', 'hover:text-gray-700', 'hover:border-gray-300');
            signupTab.classList.remove('text-blue-600', 'border-blue-500');
            signupTab.classList.add('text-gray-500', 'hover:text-gray-700', 'hover:border-gray-300');
            modal.classList.remove('hidden');
            document.body.style.overflow = 'hidden';
        }

        // Show modal with signup form
        function showSignupModal(userType) {
            currentUserType = userType;
            modalTitle.textContent = `Create ${userType} Account`;

            // Show signup, hide login
            signupForm.classList.remove('hidden');
            loginForm.classList.add('hidden');

            // Tab colors
            signupTab.classList.add('text-blue-600', 'border-blue-500');
            signupTab.classList.remove('text-gray-500', 'hover:text-gray-700', 'hover:border-gray-300');
            loginTab.classList.remove('text-blue-600', 'border-blue-500');
            loginTab.classList.add('text-gray-500', 'hover:text-gray-700', 'hover:border-gray-300');

            // Show modal
            modal.classList.remove('hidden');
            document.body.style.overflow = 'hidden';

            // âœ… Set the correct POST route dynamically
            const signupFormElement = document.getElementById("signupFormElement");
            signupFormElement.action = `/${userType.toLowerCase()}signup`; // ðŸ‘ˆ dynamic link
        }

        // Close modal
        function closeModal() {
            modal.classList.add('hidden');
            document.body.style.overflow = 'auto';
        }

        // Toggle password visibility
        function togglePassword(inputId) {
            const input = document.getElementById(inputId);
            const type = input.getAttribute('type') === 'password' ? 'text' : 'password';
            input.setAttribute('type', type);
        }

        // Close modal when clicking outside
        modal.addEventListener('click', function (e) {
            if (e.target === modal) {
                closeModal();
            }
        });

        // Close modal with ESC key
        document.addEventListener('keydown', function (e) {
            if (e.key === 'Escape') {
                closeModal();
            }
        });

        // Tab switching
        loginTab.addEventListener('click', function () {
            loginForm.classList.remove('hidden');
            signupForm.classList.add('hidden');
            this.classList.add('text-blue-600', 'border-blue-500');
            this.classList.remove('text-gray-500', 'hover:text-gray-700', 'hover:border-gray-300');
            signupTab.classList.remove('text-blue-600', 'border-blue-500');
            signupTab.classList.add('text-gray-500', 'hover:text-gray-700', 'hover:border-gray-300');
            modalTitle.textContent = `Login as ${currentUserType}`;
        });

        signupTab.addEventListener('click', function () {
            signupForm.classList.remove('hidden');
            loginForm.classList.add('hidden');
            this.classList.add('text-blue-600', 'border-blue-500');
            this.classList.remove('text-gray-500', 'hover:text-gray-700', 'hover:border-gray-300');
            loginTab.classList.remove('text-blue-600', 'border-blue-500');
            loginTab.classList.add('text-gray-500', 'hover:text-gray-700', 'hover:border-gray-300');
            modalTitle.textContent = `Create ${currentUserType} Account`;
        });

        // Form submission

        document.querySelectorAll('form').forEach(form => {
            form.addEventListener('submit', function (e) {
                e.preventDefault();

                // Only handle patient login form
                if (currentUserType === 'Patient' && this.id === 'loginForm') {
                    // Navigate using the route defined in server.js
                    window.location.href = '/patient/dashboard';
                    return; // Stop further execution
                }

                // Close modal for all other cases
                closeModal();
            });
        });
    </script>

