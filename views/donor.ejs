        // Handle emergency help button
        function handleEmergencyHelp() {
            // In a real app, this would confirm and then navigate to the emergency page
            if (confirm('You are about to help with an emergency blood request. Continue to see details?')) {
                window.location.href = '/emergency-request';
            }
        }
        
        // Show all camps modal
        function showAllCamps() {
            document.getElementById('allCampsModal').classList.remove('hidden');
            document.body.style.overflow = 'hidden';
        }
        
        // Close all camps modal
        function closeAllCampsModal() {
            document.getElementById('allCampsModal').classList.add('hidden');
            document.body.style.overflow = 'auto';
        }
        
        // Close modal when clicking outside
        document.getElementById('allCampsModal').addEventListener('click', function(e) {
            if (e.target === this) {
                closeAllCampsModal();
            }
        });
    </script>
