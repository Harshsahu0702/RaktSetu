<!DOCTYPE html>
<html lang="en" class="h-full">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Blood Requests - RaktSetu</title>
    <script defer src="https://unpkg.com/alpinejs@3.x.x/dist/cdn.min.js"></script>
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <style>
        :root {
            --primary: #ef4444;
        }

        body {
            font-family: 'Inter', sans-serif;
            background-color: #f3f4f6;
        }

        .glass-card {
            background: rgba(255, 255, 255, 0.95);
            backdrop-filter: blur(10px);
            border: 1px solid rgba(255, 255, 255, 0.18);
            box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.05), 0 2px 4px -1px rgba(0, 0, 0, 0.03);
            transition: transform 0.2s ease, box-shadow 0.2s ease;
        }

        .nav-link {
            position: relative;
            transition: color 0.3s ease;
            padding: 0.5rem 1rem;
            border-radius: 0.375rem;
            color: #4b5563;
        }

        .nav-link:hover {
            background-color: rgba(239, 68, 68, 0.05);
            color: var(--primary);
        }

        .nav-link.active {
            color: var(--primary);
            font-weight: 600;
            background-color: rgba(239, 68, 68, 0.1);
        }

        /* Animations */
        @keyframes fadeInDown {
            from {
                opacity: 0;
                transform: translateY(-10px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .animate-fade-in-down {
            animation: fadeInDown 0.3s ease-out forwards;
        }
    </style>
</head>

<body class="min-h-screen bg-gray-50">
    <% var _user=(typeof user !=='undefined' ) ? user : { fullName: 'Donor' , _id: '' , bloodGroup: 'O+' ,
        city: 'New Delhi' , contactInfo: '+91 XXXXXXXXXX' }; %>

        <nav class="bg-white shadow-sm sticky top-0 z-50">
            <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
                <div class="flex justify-between h-16">
                    <div class="flex items-center">
                        <div class="flex-shrink-0 flex items-center">
                            <i class="fas fa-tint text-red-600 text-2xl mr-2"></i>
                            <span class="text-xl font-bold text-gray-800">RaktSetu</span>
                        </div>
                        <div class="hidden md:ml-10 md:flex md:space-x-1">
                            <a href="/donor-dashboard/<%= _user._id %>/dashboard" class="nav-link">
                                <i class="fas fa-tachometer-alt mr-2"></i>Dashboard
                            </a>
                            <a href="/donor-dashboard/<%= _user._id %>/requests" class="nav-link active relative">
                                <i class="fas fa-hand-holding-heart mr-2"></i>Requests
                                <% if (typeof pendingCount !=='undefined' && pendingCount> 0) { %>
                                    <span class="absolute top-1 right-1 flex h-2.5 w-2.5">
                                        <span
                                            class="animate-ping absolute inline-flex h-full w-full rounded-full bg-red-400 opacity-75"></span>
                                        <span class="relative inline-flex rounded-full h-2.5 w-2.5 bg-red-500"></span>
                                    </span>
                                    <% } %>
                            </a>
                            <a href="/donor-dashboard/<%= _user._id %>/history" class="nav-link">
                                <i class="fas fa-history mr-2"></i>History
                            </a>
                            <a href="/donor-dashboard/<%= _user._id %>/campaigns" class="nav-link">
                                <i class="fas fa-calendar-alt mr-2"></i>Campaigns
                            </a>
                            <a href="/donor-dashboard/<%= _user._id %>/wellness" class="nav-link">
                                <i class="fas fa-heartbeat mr-2"></i>Wellness
                            </a>
                        </div>
                    </div>

                    <div class="hidden md:flex items-center space-x-4">
                        <div class="flex items-center space-x-2">
                            <img class="h-8 w-8 rounded-full border border-gray-200"
                                src="https://ui-avatars.com/api/?name=<%= _user.fullName %>&background=ef4444&color=fff"
                                alt="Profile">
                            <span class="text-sm font-medium text-gray-700">
                                <%= _user.fullName %>
                            </span>
                        </div>
                        <a href="/get-started" class="text-gray-500 hover:text-red-600 ml-4">
                            <i class="fas fa-sign-out-alt text-lg"></i>
                        </a>
                    </div>
                </div>
            </div>
        </nav>

        <main class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8 w-full">
            <div class="flex flex-col md:flex-row md:items-center justify-between mb-8">
                <div>
                    <h2 class="text-3xl font-bold text-gray-900">Blood Requests</h2>
                    <p class="text-gray-500 mt-1">Real-time needs matching your blood group (<span
                            class="font-bold text-red-600">
                            <%= _user.bloodGroup %>
                        </span>)</p>
                </div>
                <div class="mt-4 md:mt-0 flex space-x-3">
                    <button onclick="fetchBloodRequests()"
                        class="px-4 py-2 bg-white border border-gray-200 rounded-xl text-gray-600 hover:text-red-600 hover:border-red-200 transition-colors shadow-sm font-medium flex items-center">
                        <i class="fas fa-sync-alt mr-2"></i> Refresh
                    </button>
                </div>
            </div>

            <!-- Pending Requests -->
            <div class="mb-10">
                <h3 class="text-lg font-bold text-gray-800 mb-4 flex items-center">
                    <span class="bg-yellow-100 text-yellow-800 p-1.5 rounded-lg mr-3"><i
                            class="fas fa-hourglass-half"></i></span>
                    Pending Requests
                    <span id="request-count"
                        class="ml-3 px-2.5 py-0.5 rounded-full text-xs font-bold bg-red-100 text-red-600 hidden">0
                        New</span>
                </h3>

                <div id="requests-container" class="space-y-6 min-h-[200px]">
                    <!-- Loading State -->
                    <div class="flex flex-col items-center justify-center py-12 text-gray-400">
                        <i class="fas fa-circle-notch fa-spin text-3xl mb-3 text-red-500"></i>
                        <p>Finding matches...</p>
                    </div>
                </div>

                <div id="no-requests" class="hidden">
                    <div class="glass-card rounded-2xl p-12 text-center border-dashed border-2 border-gray-200">
                        <div
                            class="mx-auto h-20 w-20 bg-green-50 rounded-full flex items-center justify-center text-green-500 mb-4">
                            <i class="fas fa-check-circle text-4xl"></i>
                        </div>
                        <h3 class="text-xl font-bold text-gray-900">All caught up!</h3>
                        <p class="text-gray-500 mt-2">There are currently no pending requests for your blood group in
                            your area.</p>
                    </div>
                </div>
            </div>

            <!-- Accepted Requests -->
            <div id="accepted-section" class="hidden">
                <h3 class="text-lg font-bold text-gray-800 mb-4 flex items-center">
                    <span class="bg-green-100 text-green-800 p-1.5 rounded-lg mr-3"><i
                            class="fas fa-check-circle"></i></span>
                    Accepted Requests
                </h3>
                <div id="accepted-container" class="space-y-6">
                    <!-- Accepted items -->
                </div>
            </div>
        </main>

        <!-- Hidden Template -->
        <div id="request-template" class="hidden">
            <div
                class="glass-card rounded-xl p-0 overflow-hidden hover:shadow-lg transition-all duration-300 border-l-4 border-l-red-500 group bg-white">
                <div class="p-6">
                    <div class="flex flex-col sm:flex-row justify-between items-start mb-4">
                        <div class="flex items-center mb-2 sm:mb-0">
                            <div
                                class="h-12 w-12 rounded-full bg-red-50 flex items-center justify-center text-red-500 mr-4 shadow-sm group-hover:bg-red-500 group-hover:text-white transition-colors duration-300">
                                <i class="fas fa-user-injured text-xl"></i>
                            </div>
                            <div>
                                <h4 class="text-lg font-bold text-gray-900 leading-tight request-patient">Patient Name
                                </h4>
                                <div class="flex items-center text-xs text-gray-500 mt-1">
                                    <i class="fas fa-clock mr-1.5 opacity-75"></i>
                                    <span class="request-time">Just now</span>
                                </div>
                            </div>
                        </div>
                        <div class="flex items-center bg-red-50 px-3 py-1 rounded-full border border-red-100 shadow-sm">
                            <span class="text-xs font-semibold text-red-400 uppercase tracking-wider mr-2">Needed</span>
                            <span class="text-lg font-bold text-red-600 request-blood-group">A+</span>
                            <span class="mx-2 text-gray-300">|</span>
                            <span class="text-sm font-semibold text-gray-700 request-units">2 units</span>
                        </div>
                    </div>

                    <div
                        class="grid grid-cols-1 md:grid-cols-2 gap-4 my-4 bg-gray-50/50 p-4 rounded-lg border border-gray-100/50">
                        <div>
                            <p class="text-[10px] uppercase tracking-wider text-gray-400 font-bold mb-1">SENT TO</p>
                            <p class="text-sm font-semibold text-gray-800 flex items-start">
                                <i class="fas fa-map-marker-alt text-red-400 mt-1 mr-2"></i>
                                <span class="request-location">City Hospital</span>
                            </p>
                        </div>
                        <div>
                            <p class="text-[10px] uppercase tracking-wider text-gray-400 font-bold mb-1">Required By</p>
                            <p class="text-sm font-semibold text-gray-800 flex items-center">
                                <i class="fas fa-calendar-alt text-red-400 mr-2"></i>
                                <span class="request-date">Tomorrow</span>
                            </p>
                        </div>
                    </div>

                    <div class="flex items-center justify-between pt-2">
                        <p class="text-sm text-gray-500 line-clamp-1 italic request-message flex-1 mr-4">
                            <i class="fas fa-quote-left mr-2 text-gray-300"></i>
                            Urgent help needed
                        </p>
                        <button
                            class="view-details-btn text-sm font-medium text-red-600 hover:text-red-700 hover:underline flex items-center transition-colors px-3 py-1.5 rounded-lg hover:bg-red-50"
                            onclick="toggleDetails(this)">
                            View Details <i
                                class="fas fa-chevron-right ml-1 text-xs transition-transform duration-200 details-icon"></i>
                        </button>
                    </div>

                    <!-- Toggleable details section -->
                    <div
                        class="request-details mt-4 pt-4 border-t border-dashed border-gray-200 hidden animate-fade-in-down">
                        <div class="bg-blue-50/50 p-4 rounded-xl border border-blue-50 mb-4">
                            <h5 class="text-xs font-bold text-blue-800 uppercase tracking-wide mb-2">Medical Note</h5>
                            <p class="text-sm text-gray-700 request-message-full">
                                <!-- Full message -->
                            </p>
                        </div>

                        <div class="flex flex-col sm:flex-row gap-4 mb-6">
                            <div
                                class="flex-1 flex items-center p-3 bg-white rounded-lg border border-gray-100 shadow-sm">
                                <div
                                    class="h-10 w-10 rounded-full bg-slate-100 flex items-center justify-center text-slate-500 mr-3">
                                    <i class="fas fa-user-md"></i>
                                </div>
                                <div>
                                    <p class="text-xs text-gray-500">Doctor in Charge</p>
                                    <p class="text-sm font-semibold text-gray-900 request-doctor">Dr. Sharma</p>
                                </div>
                            </div>
                            <div
                                class="flex-1 flex items-center p-3 bg-white rounded-lg border border-gray-100 shadow-sm">
                                <div
                                    class="h-10 w-10 rounded-full bg-slate-100 flex items-center justify-center text-slate-500 mr-3">
                                    <i class="fas fa-phone-alt"></i>
                                </div>
                                <div>
                                    <p class="text-xs text-gray-500">Contact</p>
                                    <p class="text-sm font-semibold text-gray-900 request-phone">+91 XXXXX</p>
                                </div>
                            </div>
                        </div>

                        <div class="flex gap-3 request-actions">
                            <button
                                class="flex-1 bg-gradient-to-r from-red-600 to-red-700 hover:from-red-700 hover:to-red-800 text-white py-2.5 px-4 rounded-xl text-sm font-semibold shadow-md hover:shadow-lg transform active:scale-95 transition-all duration-200 accept-btn flex items-center justify-center">
                                <i class="fas fa-hand-holding-heart mr-2"></i> Accept Request
                            </button>
                            <button
                                class="flex-1 bg-white border-2 border-gray-200 text-gray-600 hover:bg-gray-50 hover:text-gray-900 hover:border-gray-300 py-2.5 px-4 rounded-xl text-sm font-semibold transition-all duration-200 decline-btn flex items-center justify-center">
                                <i class="fas fa-times mr-2"></i> Decline
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Notification Container -->
        <div id="notification-area" class="fixed bottom-4 right-4 z-[60]"></div>

        <script>
            const donorState = '<%= _user.state || "" %>';
            const donorBloodGroup = '<%= _user.bloodGroup || "" %>';
            const currentDonorId = '<%= _user._id %>';
            const currentDonorName = '<%= _user.fullName %>';
            const nextEligibleDateString = '<%= (typeof nextEligibleDate !== "undefined" && nextEligibleDate) ? nextEligibleDate.toISOString() : "" %>';

            let bloodRequests = [];
            let acceptedRequests = [];

            // Simple Notification
            function showNotification(message, type = 'success') {
                const container = document.getElementById('notification-area');
                const alert = document.createElement('div');
                const bgClass = type === 'success' ? 'bg-green-600' : 'bg-red-600';

                alert.className = `${bgClass} text-white px-6 py-3 rounded-lg shadow-lg mb-3 animate-fade-in-down flex items-center`;
                alert.innerHTML = `<i class="fas ${type === 'success' ? 'fa-check-circle' : 'fa-exclamation-circle'} mr-3"></i> ${message}`;

                container.appendChild(alert);
                setTimeout(() => {
                    alert.style.opacity = '0';
                    alert.style.transition = 'opacity 0.5s';
                    setTimeout(() => alert.remove(), 500);
                }, 3000);
            }

            // Toggle Details
            function toggleDetails(btn) {
                // Find the closest request card first
                const card = btn.closest('.glass-card');
                const details = card.querySelector('.request-details');
                const icon = btn.querySelector('.details-icon');

                if (details.classList.contains('hidden')) {
                    details.classList.remove('hidden');
                    icon.style.transform = 'rotate(90deg)';
                    btn.innerHTML = `Hide Details <i class="fas fa-chevron-right ml-1 text-xs transition-transform duration-200 details-icon" style="transform: rotate(90deg)"></i>`;
                } else {
                    details.classList.add('hidden');
                    icon.style.transform = 'rotate(0deg)';
                    btn.innerHTML = `View Details <i class="fas fa-chevron-right ml-1 text-xs transition-transform duration-200 details-icon"></i>`;
                }
            }

            async function fetchBloodRequests() {
                try {
                    const container = document.getElementById('requests-container');
                    container.innerHTML = '<div class="flex flex-col items-center justify-center py-12 text-gray-400"><i class="fas fa-circle-notch fa-spin text-3xl mb-3 text-red-500"></i><p>Finding matches...</p></div>';

                    const response = await fetch(`/api/demo-request?bloodGroup=${encodeURIComponent(donorBloodGroup)}&state=${encodeURIComponent(donorState)}`);
                    if (!response.ok) throw new Error('Failed to fetch');

                    const data = await response.json();

                    // Process data (Standardize fields)
                    bloodRequests = data.map(req => ({
                        id: req._id,
                        patientName: req.patientName || 'Patient',
                        bloodGroup: req.bloodGroup || 'Unknown',
                        units: req.units || 1,
                        hospital: req.targetHospitalName || 'Hospital',
                        requiredBy: req.requiredBy,
                        message: req.notes,
                        doctor: 'Hospital Staff',
                        contact: req.contactNumber || 'Hidden',
                        timestamp: req.datetime,
                        status: 'pending' // Default as we are fetching pending
                    }));

                    renderBloodRequests();
                    fetchAcceptedRequests(); // Also fetch accepted

                } catch (error) {
                    console.error('Error:', error);
                    document.getElementById('requests-container').innerHTML = '<div class="text-center text-red-500 py-4">Failed to load requests. <button onclick="fetchBloodRequests()" class="underline">Retry</button></div>';
                }
            }

            async function fetchAcceptedRequests() {
                try {
                    const response = await fetch(`/api/demo-request/donor/${currentDonorId}/accepted`);
                    if (!response.ok) return;

                    const data = await response.json();
                    acceptedRequests = data.map(req => ({
                        id: req._id,
                        patientName: req.patientName,
                        bloodGroup: req.bloodGroup,
                        units: req.units,
                        hospital: req.targetHospitalName,
                        timestamp: req.datetime,
                        contact: req.contactNumber
                    }));

                    renderAcceptedRequests();
                } catch (e) { console.error(e); }
            }

            function renderBloodRequests() {
                const container = document.getElementById('requests-container');
                const template = document.getElementById('request-template');
                const noRequests = document.getElementById('no-requests');
                const requestCount = document.getElementById('request-count');

                container.innerHTML = '';

                const pending = bloodRequests.filter(r => r.status === 'pending');

                if (pending.length === 0) {
                    noRequests.classList.remove('hidden');
                    requestCount.classList.add('hidden');
                    return;
                }

                noRequests.classList.add('hidden');
                requestCount.textContent = `${pending.length} New`;
                requestCount.classList.remove('hidden');

                pending.forEach(req => {
                    // Clone the FIRST child of the template div (the card itself)
                    const card = template.firstElementChild.cloneNode(true); // .glass-card

                    // Populate Logic
                    card.querySelector('.request-patient').textContent = req.patientName;
                    card.querySelector('.request-blood-group').textContent = req.bloodGroup;
                    card.querySelector('.request-units').textContent = `${req.units} Unit${req.units > 1 ? 's' : ''}`;
                    card.querySelector('.request-location').textContent = req.hospital;
                    card.querySelector('.request-time').textContent = formatTimeAgo(req.timestamp);

                    // Date formatting
                    const dateObj = new Date(req.requiredBy || req.timestamp);
                    card.querySelector('.request-date').textContent = dateObj.toLocaleDateString('en-IN', { day: 'numeric', month: 'short' });

                    card.querySelector('.request-message').textContent = req.message || 'Urgent blood donation required.';
                    card.querySelector('.request-message-full').textContent = req.message || 'No additional notes provided.';

                    card.querySelector('.request-phone').textContent = req.contact;

                    // Buttons
                    const acceptBtn = card.querySelector('.accept-btn');
                    const declineBtn = card.querySelector('.decline-btn');

                    acceptBtn.onclick = () => acceptRequest(acceptBtn, req.id);
                    declineBtn.onclick = () => declineRequest(declineBtn, req.id);

                    // IMPORTANT: The toggle button needs correct reference context
                    const toggleBtn = card.querySelector('.view-details-btn');
                    toggleBtn.setAttribute('onclick', 'toggleDetails(this)'); // Ensure it uses global function

                    container.appendChild(card);
                });
            }

            function renderAcceptedRequests() {
                const container = document.getElementById('accepted-container');
                const section = document.getElementById('accepted-section');
                container.innerHTML = '';

                if (acceptedRequests.length === 0) {
                    section.classList.add('hidden');
                    return;
                }
                section.classList.remove('hidden');

                acceptedRequests.forEach(req => {
                    const card = document.createElement('div');
                    card.className = 'glass-card rounded-xl p-6 border-l-4 border-l-green-500 bg-white mb-4';
                    card.innerHTML = `
                    <div class="flex justify-between items-start">
                        <div>
                            <h4 class="font-bold text-gray-900">${req.patientName || 'Patient'}</h4>
                            <p class="text-sm text-gray-500">Accepted on ${new Date(req.timestamp).toLocaleDateString()}</p>
                            <div class="mt-2 flex items-center gap-4">
                                <span class="text-sm font-semibold text-red-600 bg-red-50 px-2 py-1 rounded">${req.bloodGroup}</span>
                                <span class="text-sm text-gray-600">${req.hospital}</span>
                            </div>
                        </div>
                        <a href="tel:${req.contact}" class="h-10 w-10 rounded-full bg-green-100 text-green-600 flex items-center justify-center hover:bg-green-200">
                            <i class="fas fa-phone-alt"></i>
                        </a>
                    </div>
                 `;
                    container.appendChild(card);
                });
            }

            // Actions
            async function acceptRequest(btn, id) {
                // Client-side Check
                if (nextEligibleDateString) {
                    const eligibleDate = new Date(nextEligibleDateString);
                    if (new Date() < eligibleDate) {
                        showNotification(`Action Blocked: Eligible on ${eligibleDate.toLocaleDateString('en-IN')}`, 'error');
                        return;
                    }
                }

                const originalText = btn.innerHTML;
                btn.disabled = true;
                btn.innerHTML = '<i class="fas fa-circle-notch fa-spin"></i>';

                try {
                    const res = await fetch(`/api/demo-request/${id}/status`, {
                        method: 'PUT',
                        headers: { 'Content-Type': 'application/json' },
                        body: JSON.stringify({
                            status: 'accepted',
                            donorId: currentDonorId,
                            donorName: currentDonorName
                        })
                    });

                    const data = await res.json();

                    if (res.ok) {
                        showNotification('Request Accepted! Thank you for saving a life.');
                        setTimeout(fetchBloodRequests, 1000); // Refresh all
                    } else {
                        throw new Error(data.message || 'Failed');
                    }
                } catch (e) {
                    showNotification(e.message || 'Error accepting request', 'error');
                    btn.disabled = false;
                    btn.innerHTML = originalText;
                }
            }

            async function declineRequest(btn, id) {
                if (!confirm('Are you sure?')) return;
                try {
                    await fetch(`/api/demo-request/${id}/status`, {
                        method: 'PUT',
                        headers: { 'Content-Type': 'application/json' },
                        body: JSON.stringify({ status: 'declined' })
                    });
                    showNotification('Request Declined', 'success');
                    fetchBloodRequests();
                } catch (e) { console.log(e); }
            }

            function formatTimeAgo(dateString) {
                const date = new Date(dateString);
                const now = new Date();
                const diff = Math.floor((now - date) / 1000); // seconds

                if (diff < 60) return 'Just now';
                const m = Math.floor(diff / 60);
                if (m < 60) return `${m}m ago`;
                const h = Math.floor(m / 60);
                if (h < 24) return `${h}h ago`;
                return Math.floor(h / 24) + 'd ago';
            }

            // Init
            fetchBloodRequests();
        </script>
</body>

</html>